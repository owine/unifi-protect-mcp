{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":semanticCommits"
  ],
  "timezone": "America/Chicago",
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,
  "lockFileMaintenance": {
    "schedule": [
      "on sunday"
    ],
    "automerge": true
  },
  "packageRules": [
    {
      "groupName": "eslint",
      "matchPackageNames": [
        "eslint",
        "@eslint/js",
        "typescript-eslint"
      ]
    },
    {
      "description": "Automerge dev tooling (non-compiler)",
      "matchDepTypes": [
        "devDependencies"
      ],
      "automerge": true,
      "matchPackageNames": [
        "!typescript"
      ]
    },
    {
      "description": "MCP SDK â€” always review",
      "matchPackageNames": [
        "@modelcontextprotocol/sdk"
      ],
      "automerge": false
    },
    {
      "description": "Never automerge major bumps",
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false
    }
  ]
}
