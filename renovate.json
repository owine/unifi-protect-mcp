{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:best-practices", ":semanticCommits"],
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,
  "lockFileMaintenance": {
    "schedule": ["on sunday"]
  },
  "packageRules": [
    {
      "groupName": "eslint",
      "matchPackageNames": ["eslint", "@eslint/js", "typescript-eslint"]
    }
  ]
}
